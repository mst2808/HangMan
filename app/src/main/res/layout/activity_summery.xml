<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_sky"
    tools:context="com.example.marcus.hangman.SummeryActivity"
    android:weightSum="11">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/informationTV"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_weight="1"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/oldScoreTV"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/oldDateTV"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_weight="3"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/newScoreTV"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/newDateTV"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_weight="3"/>

        </TableRow>

    </TableLayout>

</LinearLayout>
